{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["/src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "target": "es2015",
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
